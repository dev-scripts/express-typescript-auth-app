{
  "name": "express-typescript-auth-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "predev": "npx tsoa spec-and-routes && npx tsc",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "dev": "nodemon",
    "swagger": "tsoa spec",
    "migration:create": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:create",
    "migration:generate": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:generate -d ./src/configs/data.source.ts",
    "migration:up": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:run -d ./src/configs/data.source.ts",
    "migration:down": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:revert -d ./src/configs/data.source.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/dotenv-safe": "^8.1.5",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "joi-typescript-validator": "^0.2.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.1",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1",
    "typeorm": "^0.3.20"
  }
}